// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @default(autoincrement()) @id
  email String  @unique
  username  String @unique
  password String 
  profileName String?
  tagline String?
  description String?
  publicEmail String?
  publicWebsite String?
  birthplace String?
  birthday DateTime?
  occupation String?
  status Status?
  country Country? @relation(fields: [countryId], references: [id])
  countryId Int?
  city City? @relation(fields: [cityId], references: [id])
  cityId Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


enum Status {
  SINGLE
  TAKEN
}


model Country {
  id Int @default(autoincrement()) @id
  shortname String
  name String
  phonecode Int
  user User[]
  city City[]
}

model City {
  id Int @default(autoincrement()) @id
  name String
  country Country @relation(fields: [countryId], references: [id])
  countryId Int
  user User[]
}